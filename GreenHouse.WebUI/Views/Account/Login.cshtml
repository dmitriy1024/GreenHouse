<script>
    function OnSuccess(data) {
        if (data == 'OK') {
            // data.redirect contains the string URL to redirect to
            window.location.href = '@Url.Action("Index", "Home")';
        }
        else {
            // data.form contains the HTML for the replacement form
            $("#result").replaceWith(data);
        }
    }
</script>
